{
  "name": "iress-ui-lib",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "description": "This is the iress ui library",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "scripts": {
    "build:css": "copyup 'src/lib/**/*.css' dist/css",
    "build": "vite build && yarn run build:css",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --write src/",
    "dev": "vite --port 5010 --strictPort",
    "preview": "vite preview --port 5010 --strictPort",
    "serve": "vite preview --port 5010 --strictPort",
    "fix": "eslint src --ext .js,.ts,.tsx --max-warnings 0 --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitejs/plugin-react": "^3.0.1",
    "copyfiles": "2.4.1",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-storybook": "^0.6.13",
    "husky": "^8.0.3",
    "jest-styled-components": "^7.0.5",
    "lint-staged": "^14.0.1",
    "typescript": "^5.0.4",
    "vite": "^4.0.4"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "!(*d).(ts|tsx)": [
      "prettier --config .prettierrc --write",
      "eslint --max-warnings 0 --fix"
    ]
  }
}
